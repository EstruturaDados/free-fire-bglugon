#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

// ESTRUTURAS DE DADOS

// Estrutura base que representa um item da mochila
typedef struct {
    char nome[30];
    char tipo[20];
    int quantidade;
} Item;

// Estrutura para representar um nó da lista encadeada
typedef struct No {
    Item dados;          // Dados do item armazenado
    struct No *proximo;  // Ponteiro para o próximo nó
} No;

// VARIÁVEIS GLOBAIS
#define MAX_ITENS 10          // Limite máximo de itens na mochila (vetor)
int comparacoesSequencial = 0; // Contador de comparações na busca sequencial
int comparacoesBinaria = 0;    // Contador de comparações na busca binária

// FUNÇÕES PARA MANIPULAR A MOCHILA USANDO VETOR

// Função para inserir um item no vetor
void inserirItemVetor(Item mochila[], int *tamanho) {
    if (*tamanho >= MAX_ITENS) {  // Verifica se a mochila está cheia
        printf("\nA mochila está cheia!\n");
        return;
    }

    printf("\n--- Inserir Item (Vetor) ---\n");

    // Leitura do nome do item
    printf("Nome: ");
    fgets(mochila[*tamanho].nome, 30, stdin);
    mochila[*tamanho].nome[strcspn(mochila[*tamanho].nome, "\n")] = '\0';

    // Leitura do tipo do item
    printf("Tipo: ");
    fgets(mochila[*tamanho].tipo, 20, stdin);
    mochila[*tamanho].tipo[strcspn(mochila[*tamanho].tipo, "\n")] = '\0';

    // Leitura da quantidade
    printf("Quantidade: ");
    scanf("%d", &mochila[*tamanho].quantidade);
    getchar(); // Limpa o buffer do teclado

    (*tamanho)++; // Incrementa o total de itens
    printf("Item adicionado com sucesso!\n");
}

// Função para remover um item do vetor pelo nome
void removerItemVetor(Item mochila[], int *tamanho) {
    if (*tamanho == 0) { // Verifica se o vetor está vazio
        printf("\nMochila vazia!\n");
        return;
    }

    char nome[30];
    printf("\nDigite o nome do item a remover: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    int encontrado = -1;
    // Procura o item no vetor
    for (int i = 0; i < *tamanho; i++) {
        if (strcmp(mochila[i].nome, nome) == 0) {
            encontrado = i;
            break;
        }
    }

    // Se não encontrar, informa ao usuário
    if (encontrado == -1) {
        printf("Item não encontrado.\n");
        return;
    }

    // Desloca os elementos à esquerda para preencher o espaço removido
    for (int i = encontrado; i < *tamanho - 1; i++)
        mochila[i] = mochila[i + 1];

    (*tamanho)--; // Diminui o total de itens
    printf("Item removido com sucesso!\n");
}

// Função para listar todos os itens do vetor
void listarItensVetor(Item mochila[], int tamanho) {
    printf("\n--- Itens na Mochila (Vetor) ---\n");
    if (tamanho == 0) {
        printf("Nenhum item cadastrado.\n");
        return;
    }

    for (int i = 0; i < tamanho; i++) {
        printf("%d) Nome: %s | Tipo: %s | Quantidade: %d\n",
               i + 1, mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
    }
}

// Função de busca sequencial no vetor
void buscarSequencialVetor(Item mochila[], int tamanho) {
    comparacoesSequencial = 0; // Zera o contador

    char nome[30];
    printf("\nDigite o nome do item: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    // Percorre o vetor comparando nomes
    for (int i = 0; i < tamanho; i++) {
        comparacoesSequencial++;
        if (strcmp(mochila[i].nome, nome) == 0) {
            printf("Item encontrado: %s | Tipo: %s | Quantidade: %d\n",
                   mochila[i].nome, mochila[i].tipo, mochila[i].quantidade);
            printf("Comparações realizadas: %d\n", comparacoesSequencial);
            return;
        }
    }

    printf("Item não encontrado. Comparações: %d\n", comparacoesSequencial);
}

// Função para ordenar o vetor por nome 
void ordenarVetor(Item mochila[], int tamanho) {
    Item temp;
    // Laços aninhados para realizar as comparações
    for (int i = 0; i < tamanho - 1; i++) {
        for (int j = 0; j < tamanho - i - 1; j++) {
            if (strcmp(mochila[j].nome, mochila[j + 1].nome) > 0) {
                // Troca os elementos
                temp = mochila[j];
                mochila[j] = mochila[j + 1];
                mochila[j + 1] = temp;
            }
        }
    }
    printf("\nItens ordenados por nome (Bubble Sort).\n");
}

// Função de busca binária - requer vetor ordenado
void buscarBinariaVetor(Item mochila[], int tamanho) {
    comparacoesBinaria = 0;

    char nome[30];
    printf("\nDigite o nome do item: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    int inicio = 0, fim = tamanho - 1;
    while (inicio <= fim) {
        comparacoesBinaria++;
        int meio = (inicio + fim) / 2;

        int cmp = strcmp(mochila[meio].nome, nome);
        if (cmp == 0) { // Item encontrado
            printf("Item encontrado: %s | Tipo: %s | Quantidade: %d\n",
                   mochila[meio].nome, mochila[meio].tipo, mochila[meio].quantidade);
            printf("Comparações realizadas: %d\n", comparacoesBinaria);
            return;
        } else if (cmp < 0) { // Item está à direita
            inicio = meio + 1;
        } else { // Item está à esquerda
            fim = meio - 1;
        }
    }

    printf("Item não encontrado. Comparações: %d\n", comparacoesBinaria);
}

// FUNÇÕES PARA MANIPULAR A MOCHILA USANDO LISTA ENCADEADA

// Função para inserir um novo item no início da lista
void inserirItemLista(No **inicio) {
    // Aloca memória para o novo nó
    No *novo = (No *)malloc(sizeof(No));
    if (!novo) {
        printf("Erro ao alocar memória!\n");
        return;
    }

    printf("\n--- Inserir Item (Lista Encadeada) ---\n");

    // Leitura dos dados do novo item
    printf("Nome: ");
    fgets(novo->dados.nome, 30, stdin);
    novo->dados.nome[strcspn(novo->dados.nome, "\n")] = '\0';

    printf("Tipo: ");
    fgets(novo->dados.tipo, 20, stdin);
    novo->dados.tipo[strcspn(novo->dados.tipo, "\n")] = '\0';

    printf("Quantidade: ");
    scanf("%d", &novo->dados.quantidade);
    getchar();

    // Insere o novo nó no início da lista
    novo->proximo = *inicio;
    *inicio = novo;
    printf("Item adicionado à lista!\n");
}

// Função para remover item da lista encadeada pelo nome
void removerItemLista(No **inicio) {
    if (*inicio == NULL) {
        printf("\nLista vazia!\n");
        return;
    }

    char nome[30];
    printf("\nDigite o nome do item a remover: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    No *atual = *inicio, *anterior = NULL;

    // Procura o item na lista
    while (atual != NULL && strcmp(atual->dados.nome, nome) != 0) {
        anterior = atual;
        atual = atual->proximo;
    }

    if (atual == NULL) {
        printf("Item não encontrado.\n");
        return;
    }

    // Remove o nó ajustando o encadeamento
    if (anterior == NULL)
        *inicio = atual->proximo;
    else
        anterior->proximo = atual->proximo;

    free(atual);
    printf("Item removido com sucesso!\n");
}

// Função para listar os itens da lista encadeada
void listarItensLista(No *inicio) {
    printf("\n--- Itens na Mochila (Lista Encadeada) ---\n");
    if (inicio == NULL) {
        printf("Nenhum item cadastrado.\n");
        return;
    }

    No *atual = inicio;
    int i = 1;
    // Percorre toda a lista exibindo os dados
    while (atual != NULL) {
        printf("%d) Nome: %s | Tipo: %s | Quantidade: %d\n",
               i++, atual->dados.nome, atual->dados.tipo, atual->dados.quantidade);
        atual = atual->proximo;
    }
}

// Função de busca sequencial na lista encadeada
void buscarItemLista(No *inicio) {
    comparacoesSequencial = 0;
    char nome[30];
    printf("\nDigite o nome do item: ");
    fgets(nome, 30, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    No *atual = inicio;
    // Percorre a lista até encontrar o nome ou o final
    while (atual != NULL) {
        comparacoesSequencial++;
        if (strcmp(atual->dados.nome, nome) == 0) {
            printf("Item encontrado: %s | Tipo: %s | Quantidade: %d\n",
                   atual->dados.nome, atual->dados.tipo, atual->dados.quantidade);
            printf("Comparações: %d\n", comparacoesSequencial);
            return;
        }
        atual = atual->proximo;
    }

    printf("Item não encontrado. Comparações: %d\n", comparacoesSequencial);
}

// FUNÇÃO PRINCIPAL - MENU PRINCIPAL
int main() {
    Item mochilaVetor[MAX_ITENS]; // Estrutura da mochila tipo vetor
    int tamanho = 0;              // Quantidade de itens no vetor

    No *inicioLista = NULL;       // Ponteiro para o início da lista encadeada

    int escolhaEstrutura, opcao;

    do {
        printf("\n=== SISTEMA DE MOCHILA ===\n");
        printf("1 - Usar Vetor\n");
        printf("2 - Usar Lista Encadeada\n");
        printf("0 - Sair\n");
        printf("Escolha: ");
        scanf("%d", &escolhaEstrutura);
        getchar(); // Limpa o buffer

        // MENU PARA O VETOR
        if (escolhaEstrutura == 1) {
            do {
                printf("\n--- MENU (VETOR) ---\n");
                printf("1 - Inserir\n2 - Remover\n3 - Listar\n4 - Buscar Sequencial\n5 - Ordenar\n6 - Buscar Binária\n0 - Voltar\n");
                printf("Opção: ");
                scanf("%d", &opcao);
                getchar();

                switch (opcao) {
                    case 1: inserirItemVetor(mochilaVetor, &tamanho); break;
                    case 2: removerItemVetor(mochilaVetor, &tamanho); break;
                    case 3: listarItensVetor(mochilaVetor, tamanho); break;
                    case 4: buscarSequencialVetor(mochilaVetor, tamanho); break;
                    case 5: ordenarVetor(mochilaVetor, tamanho); break;
                    case 6: buscarBinariaVetor(mochilaVetor, tamanho); break;
                }
            } while (opcao != 0);
        }

        // MENU PARA A LISTA ENCADEADA
        else if (escolhaEstrutura == 2) {
            do {
                printf("\n--- MENU (LISTA ENCADEADA) ---\n");
                printf("1 - Inserir\n2 - Remover\n3 - Listar\n4 - Buscar\n0 - Voltar\n");
                printf("Opção: ");
                scanf("%d", &opcao);
                getchar();

                switch (opcao) {
                    case 1: inserirItemLista(&inicioLista); break;
                    case 2: removerItemLista(&inicioLista); break;
                    case 3: listarItensLista(inicioLista); break;
                    case 4: buscarItemLista(inicioLista); break;
                }
            } while (opcao != 0);
        }

    } while (escolhaEstrutura != 0);

    printf("\nEncerrando o sistema...\n");
    return 0;
}
